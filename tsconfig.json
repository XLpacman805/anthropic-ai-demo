{
    "compilerOptions": {
        "module": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@clients/*": ["./src/clients/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}